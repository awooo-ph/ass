<UserControl x:Class="norsu.ass.Server.Views.OfficeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:norsu.ass.Server.Views"
             mc:Ignorable="d" 
             xmlns:cnv="clr-namespace:norsu.ass.Server.Converters"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <md:PackIcon Kind="Factory" Height="64" Width="64" />
            <StackPanel Margin="20 0 0 0" Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding Offices/ShortName}" Style="{StaticResource MaterialDesignHeadlineTextBlock}"/>
                <TextBlock Text="{Binding Offices/LongName}" Style="{StaticResource MaterialDesignSubheadingTextBlock}"/>
            </StackPanel>
            <ListBox Grid.Column="2"
                     VerticalAlignment="Center">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBoxItem IsSelected="True" Padding="7 14 7 0">
                    <StackPanel>
                        <md:PackIcon Kind="Message" Height="24" Width="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Suggestions"
                                   Margin="0 0 0 7"/>
                        <Rectangle Fill="{StaticResource PrimaryHueDarkBrush}" Height="4"
                                   Visibility="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem},Path=IsSelected,Converter={cnv:BooleanToVisibility}}"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem x:Name="Front" HorizontalContentAlignment="Stretch" Padding="7 14 7 0">
                    <StackPanel>
                        <md:PackIcon Kind="Star" Height="24" Width="24" HorizontalAlignment="Center" />
                        <TextBlock Text="Ratings" TextAlignment="Center"
                                   Margin="0 0 0 7" />
                        <Rectangle Fill="{StaticResource PrimaryHueDarkBrush}" Height="4"
                                   Visibility="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem},Path=IsSelected,Converter={cnv:BooleanToVisibility}}" />
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
        </Grid>
        <Grid Grid.Row="1" Margin="20">
        <md:Flipper IsFlipped="{Binding ElementName=Front,Path=IsSelected}">
            <md:Flipper.FrontContent>
                <DataGrid ItemsSource="{Binding Offices}"/>
            </md:Flipper.FrontContent>
            <md:Flipper.BackContent>
                <DataGrid ItemsSource="{Binding Offices}"/>
            </md:Flipper.BackContent>
        </md:Flipper>
        </Grid>
    </Grid>
</UserControl>
